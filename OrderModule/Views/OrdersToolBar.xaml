<UserControl x:Class="OrderModule.Views.OrdersToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:commands="clr-namespace:OrderModule.Commands"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <ToolBar>
        <Button AutomationProperties.AutomationId="SaveAllToolBarButton"
                Command="{x:Static commands:OrdersCommand.SaveAllOrdersCommand}">
            Save All Orders
        </Button>
        <Separator/>
    </ToolBar>

</UserControl>
